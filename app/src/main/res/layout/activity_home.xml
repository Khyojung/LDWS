<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hyojung.ldws.SoundActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#ffdebd">
    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/menu_back"
        android:id="@+id/list_tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="sound"/>
    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/list_tv_2"
        android:background="@drawable/menu_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="sound"/>


    </LinearLayout>

    <Button
        android:onClick="add_list"
        android:layout_alignParentBottom="true"
        android:id="@+id/list_add"
        android:layout_margin="20dp"
        android:background="@drawable/add_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#fff"
        android:text="+ 항목 추가"/>

</RelativeLayout>
